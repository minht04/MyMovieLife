<div class="mypage-container mx-auto mt-5">
  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-4 col-xs-12">
      <h2 class="mypage-name"><%= @member.name %></h2>
      <%= attachment_image_tag @member, :profile_image, :fill, 250, 250, fallback: "no_image.jpg", size:'250x250', class:'rounded-circle' %><br>
      <div class="mt-4"><%= @member.introduction %></div>
    </div>
    <div class="col-md-5 col-xs-12 mt-5">
      <% if @member.id == current_member.id %>
      <p><%= link_to edit_member_path(@member), class:"btn btn-light" do %>
           profile editing<i class="fas fa-user-edit"></i>
         <% end %>
      </p>
      <% end %>
      <% if current_member != @member %>
        <% if current_member.following?(@member) %>
          <%= link_to 'unfollow', member_relationships_path(@member), method: :delete, class: "btn btn-secondary" %>
        <% else %>
          <%= link_to 'follow', member_relationships_path(@member), method: :post, class: "btn btn-primary" %>
        <% end %>
      <% end %>

      <p>
        <%= link_to follows_member_path(@member), class:"btn btn-light" do %>
          <%= @member.follower.count %>follows<i class="fas fa-user-friends"></i>
        <% end %>
      </p>
      <p>
        <%= link_to followers_member_path(@member), class:"btn btn-light" do %>
          <%= @member.followed.count %>followers<i class="fas fa-user-friends"></i>
        <% end %>
      </p>
      <%= link_to favorites_member_path, class:"btn btn-light" do %>
        favorites<i class="far fa-heart"></i>
      <% end %>
    </div>
  </div>
</div>



<div class="container mx-auto mt-3" style="width: 80%;">

    <h3 class="d-inline-flex p-2 bd-highlight"><%= @member.name %>'s posts</h3>
    <div class="row row-cols-4">
      <% @posts.each do |post| %>
      <div class="cols">
        <%= attachment_image_tag post, :image, :fill, 120, 120, format: 'jpeg', fallback: "unnamed.jpg", size:'120x120' %>
        <p><%= link_to post_path(post) do %>
            <%= post.movie %>
          <% end %>
          </p>
      </div>
      <% end %>
    </div>

</div>


<%= paginate @posts %>