<div class="mypage-container mt-5">
  <div class="row justify-content-md-center" style="margin-left: 0; margin-right: 0;">
    <div class="col-md-3"></div>
    <div class="col-md-4 col-sm-12">
      <h3 class="mypage-name"><%= @member.name %></h3>
      <%= attachment_image_tag @member, :profile_image, :fill, 250, 250, fallback: "no_image.jpg", size:'250x250', class:'rounded-circle' %><br>
      <div class="mt-4"><%= @member.introduction %></div>
    </div>
    <div class="col-md-3 col-xs-12 mt-5">
      <% if @member.id == current_member.id %>
      <p><%= link_to edit_member_path(@member), class:"btn btn-light" do %>
           profile editing<i class="fas fa-user-edit"></i>
         <% end %>
      </p>
      <% end %>
      <p>
      <% if current_member != @member %>
        <% if current_member.following?(@member) %>
          <%= link_to 'unfollow', member_relationships_path(@member), method: :delete, class: "btn btn-outline-secondary" %>
        <% else %>
          <%= link_to 'follow', member_relationships_path(@member), method: :post, class: "btn btn-outline-primary" %>
        <% end %>
      <% end %>
      </p>

      <p>
        <%= link_to follows_member_path(@member), class:"btn btn-light" do %>
          <%= @member.follower.count %>follows<i class="fas fa-user-friends"></i>
        <% end %>
      </p>
      <p>
        <%= link_to followers_member_path(@member), class:"btn btn-light" do %>
          <%= @member.followed.count %>followers<i class="fas fa-user-friends"></i>
        <% end %>
    </div>
  </div>
</div>

<!--投稿、お気に入り一覧-->
<div class="container mx-auto mt-3" style="width: 80%;">
<!--タブ-->
  <ul class="nav nav-tabs nav-justified" role="tablist">
    <li class="nav-item">
      <a class="nav-link active" id="item1-tab" data-toggle="tab" href="#item1" role="tab" aria-controls="item1" aria-selected="true">posts</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" id="item2-tab" data-toggle="tab" href="#item2" role="tab" aria-controls="item2" aria-selected="false">favorite</a>
    </li>
  </ul>
<!--投稿一覧-->
  <div class="tab-content">
    <div class="tab-pane fade show active" id="item1" role="tabpanel" aria-labelledby="item1-tab">
      <%= render 'list', posts: @posts %>
    </div>
<!--お気に入り一覧-->
    <div class="tab-pane fade" id="item2" role="tabpanel" aria-labelledby="item2-tab">
      <%= render 'list', posts: @favorite_posts %>
    </div>
  </div>
</div>
