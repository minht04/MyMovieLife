<% if current_member != member %>
  <% if current_member.following?(member) %>
    <%= link_to 'unfollow', member_relationships_path(member), method: :delete, class: "btn btn-outline-secondary", remote: true %>
  <% else %>
    <%= link_to 'follow', member_relationships_path(member), method: :post, class: "btn btn-outline-primary", remote: true %>
  <% end %>
<% end %>