<div class="d-lg-flex d-md-flex my-box-light flex-wrap mt-3">
  <% posts.each do |post| %>
  <div class="my-box-post col-sm-3">
    <%= link_to post_path(post) do %>
      <%= attachment_image_tag post, :image, :fill, 120, 120, format: 'jpeg', fallback: "unnamed.jpg", size:'120x120' %>
    <% end %>
    <p><%= link_to post_path(post) do %>
        <%= post.movie %>
      <% end %>
    </p>
  </div>
  <% end %>

</div>
<%= paginate posts %>