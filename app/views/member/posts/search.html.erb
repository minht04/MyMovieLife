<div class="container">
  <div class="col-12 col-sm col-md-8 mt-3"></div>
  <% @tag_list.each do |list| %>
    <span>
      <%= link_to tag_posts_path(tag_id: list.id) do %>
        <%= "##{list.tag_name}" %>
      <% end %>
      <%= "(#{list.posts.count})" %>
    </span>
  <% end %>

  <div class="row no-gutters">
    <h4 class="col-12 col-sm col-md-8 mt-2"><%= "##{@tag.tag_name}" %>'s posts</h4>
  </div>

  <%= render 'index', posts: @posts %>

</div>

