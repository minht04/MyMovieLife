<div class="container">
  <div class="row no-gutters">
    <h3 class="col-12 col-sm col-md-8 mt-5">ユーザー一覧</h3>
  </div>
</div>

<table class="table mx-auto mt-3" style="width: 80%;">
  <thead>
    <tr>
      <th scope="col">ユーザーID</th>
      <th scope="col">名前</th>
      <th scope="col">メールアドレス</th>
      <th scope="col">ステータス</th>
    </tr>
  </thead>
  <tbody>
  <% @members.each do |member| %>
    <tr>
      <td><%= member.id %></td>
      <td>
        <%= link_to admin_member_path(member) do %>
          <%= member.name %>
        <% end %>
      </td>
      <td><%= member.email %></td>
      <td>
        <%if member.is_deleted?  %>
          <span class="text-invalid">削除済み</span>
        <% else %>
          <span class="text-active">有効</class>
        <% end %>  
      </td>
    </tr>
  <% end %>
  </tbody>
</table>