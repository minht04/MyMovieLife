<div class="container">
  <div class="row no-gutters">
    <h3 class="col-12 col-sm col-md-8 mt-5">投稿一覧</h3>
  </div>
</div>

<table class="table mx-auto mt-3" style="width: 80%;">
  <thead>
    <tr>
      <th></th>
      <th scope="col">映画名</th>
      <th scope="col">ひとこと</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @posts.each do |post| %>
    <tr>
      <td>
        <%= attachment_image_tag post, :image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
      </td>
      <td><%= post.movie %></td>
      <td><%= post.title %></td>
      <td><%= link_to '詳細', admin_post_path(post) %></td>
    </tr>
  <% end %>
  </tbody>
</table>